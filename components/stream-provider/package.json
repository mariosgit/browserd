{
  "name": "@browserd/stream-provider",
  "version": "1.0.0",
  "description": "App that streams from the cloud",
  "main": "dist/stream-provider/src/node/main.js",
  "scripts": {
    "lint": "tslint -p .",
    "build": "tsc -p .",
    "start": "electron . | npx pino-pretty",
    "test": "jest --coverage",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "author": {
    "name": "bengreenier",
    "email": "ben+npm@bengreenier.com"
  },
  "contributors": [
    {
      "name": "phongcao",
      "email": "phong.caothai@live.com"
    },
    {
      "name": "conradmitchell",
      "email": "conradmitchell465@gmail.com"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/bengreenier/browserd",
  "build": {
    "files": [
      "**/src/**/*"
    ],
    "appId": "com.bengreenier.browserd",
    "productName": "browserd",
    "directories": {
      "output": "bin"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libasound2",
        "libxss1",
        "libdbus-1-3",
        "libgdk-pixbuf2.0-0",
        "libgtk-3-0"
      ]
    },
    "linux": {
      "executableName": "browserd",
      "artifactName": "${productName}-${version}.${ext}",
      "target": "deb"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testRegex": [
      "/__tests__/.*spec\\.[jt]sx?$"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "dependencies": {
    "@browserd/shared": "^1.0.0",
    "@electron/remote": "^2.0.9",
    "dotenv": "^16.0.3",
    "pino": "^8.8.0",
    "sdp-transform": "^2.14.1",
    "simple-peer": "^9.11.1",
    "strict-event-emitter-types": "^2.0.0",
    "twilio": "^3.84.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.2.5",
    "@types/pino": "^7.0.4",
    "@types/sdp-transform": "^2.4.5",
    "@types/simple-peer": "^9.11.5",
    "@types/uuid": "^9.0.0",
    "electron": "^22.0.1",
    "electron-builder": "^23.6.0",
    "jest": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "ts-jest": "^29.0.4",
    "tslint": "^5.20.1",
    "typescript": "^4.9.4"
  }
}
