{
  "name": "@browserd/stream-consumer",
  "version": "1.0.0",
  "description": "The component that consumes and interacts with content from the cloud",
  "scripts": {
    "lint": "tslint -p .",
    "build": "tsc -p . && browserify -d dist/stream-consumer/src/main.js -o dist/stream-consumer/src/bundle.js",
    "test": "jest --coverage"
  },
  "build": {
    "files": [
      "**/src/**/*"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testRegex": [
      "/__tests__/.*spec\\.[jt]sx?$"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "dependencies": {
    "@browserd/shared": "^1.0.0",
    "pino": "^8.8.0",
    "simple-peer": "^9.11.1",
    "strict-event-emitter-types": "^2.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/jquery": "^3.5.16",
    "@types/pino": "^7.0.4",
    "@types/simple-peer": "^9.11.5",
    "@types/uuid": "^9.0.0",
    "browserify": "^17.0.0",
    "jest": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "jquery": "^3.6.3",
    "ts-jest": "^29.0.4",
    "tslint": "^5.20.1",
    "typescript": "^4.9.4"
  }
}
